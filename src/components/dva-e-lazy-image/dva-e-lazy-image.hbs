---
layout: default
noToolbar: true
alt: "DVA Lazy Image"
aspectRatio: "16:9"
sizes: "100vw"
---


<dva-e-lazy-image
  class="dva-e-lazy-image {{cssClasses}}"
  src="{{pv-path @root (pv-choose this.src (pv-img-placeholder "1200" (pv-choose this.dummyAspectRatio "16:9") this.dummyColor))}}"
  alt="{{pv-choose this.alt "Image"}}"
  srcset="{{dva-srcset (pv-choose this.srcsetBase "dummy") (pv-choose this.dummyAspectRatio "16:9") this.dummyColor this.srcsetFileType}}"
  sizes="{{this.sizes}}"
  loading-placeholder="{{pv-path @root (pv-choose this.loadingPlaceholder (pv-img-placeholder "60" (pv-choose this.dummyAspectRatio "16:9") this.dummyColor))}}"
  aspect-ratio="{{this.aspectRatio}}"
  {{#if this.noPlaceholder}}no-placeholder{{/if}}
>
</dva-e-lazy-image>

