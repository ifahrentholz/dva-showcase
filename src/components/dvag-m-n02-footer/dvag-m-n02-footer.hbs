    <div class="dva-grid-row">
      <div class="dva-grid-col-1-12">
        {{> dvag-m-n02-footer__navigation }}
      </div>
    </div>
    <div class="dva-grid-row">
      <!-- @TODO BE - social links are only visible on non-vb-pages -->
