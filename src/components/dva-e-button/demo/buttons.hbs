---
layout: default
nestedPath: '../'
iconTypes:
  - iconOnly: false # No icon
  - cssClasses: "dva-e-button--icon-right"
    iconID: "dva-icon-facebook"
  - iconOnly: true
    iconID: "dva-icon-facebook"
    cssClasses: "dva-e-button--icon-only"
---

{{#each this.iconTypes}}
  {{> dva-e-button 
    iconOnly=this.iconOnly 
    cssClasses=this.cssClasses
    label="Primary Button" 
    iconID=this.iconID
  }}
{{/each}}

<br>

{{#each this.iconTypes}}
  {{> dva-e-button 
    iconOnly=this.iconOnly 
    cssClasses=(pv-concat "dva-e-button--secondary " this.cssClasses)
    label="Secondary Button" 
    iconID=this.iconID
  }}
{{/each}}

<br>

