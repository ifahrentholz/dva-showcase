---
layout: default
sources:
  - mqDef: "1-3"
    renditions: 
      - type: "video/webm"
        src: "../dummy-content/videos/vb-hero_4x3.webm"
      - type: "video/mp4"
        src: "../dummy-content/videos/vb-hero_4x3.mp4"
    fallback: ../dummy-content/images/sample/vb_conf/backgrounds/motiv1_4x3.jpg
  - mqDef: "4-5"
    renditions: 
      - type: "video/webm"
        src: "../dummy-content/videos/vb-hero_21x9.webm"
      - type: "video/mp4"
        src: "../dummy-content/videos/vb-hero_21x9.mp4"
    fallback: ../dummy-content/images/sample/vb_conf/backgrounds/motiv1_21x9.jpg
---

<dva-e-lazy-video class="dva-e-lazy-video {{cssClasses}}">
  {{#each sources}}
    {{#each this.renditions}}
      <source data-src="{{pv-path @root this.src}}" type="{{this.type}}" data-dva-mq="{{../this.mqDef}}">
    {{/each}}
      <img data-src="{{pv-path @root this.fallback}}" data-dva-mq="{{this.mqDef}}">
  {{/each}}
</dva-e-lazy-video>